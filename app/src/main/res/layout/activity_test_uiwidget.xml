<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TestUIWidgetActivity">

    <TextView
        android:id="@+id/uiwidget_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="this is testUIWidgetViewActivity"
        android:textColor="@color/red_Crimson_DC143C"
        android:textSize="24dp" />


    <Button
        android:id="@+id/uiwidget_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button"
        android:textAllCaps="false"
        android:textColor="@color/red_Crimson_DC143C" />

    <EditText
        android:id="@+id/uiwidget_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:hint="请输入类容..........." />

    <ImageView
        android:id="@+id/image_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_1"
        />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>


    <!--gravity: 对齐方式-->
    <!--textAllCaps 禁止转化为大写-->
<!--    hint 输入框的提示内容-->
<!--maxLines 最大行数-->




